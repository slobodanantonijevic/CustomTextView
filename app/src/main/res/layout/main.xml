<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <com.slobodanantonijevic.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="25.0sp"
        android:textColor="@android:color/holo_blue_dark"
        custom:fontTypeFaceAsset="fontawesome-webfont.ttf"
        android:text="@string/fa_font" />

    <com.slobodanantonijevic.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="30.0sp"
        android:textColor="@android:color/holo_red_dark"
        custom:fontTypeFaceAsset="UnifrakturCook-Bold.ttf"
        android:text="@string/uni_font" />

    <com.slobodanantonijevic.widget.CustomTextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="50.0sp"
        android:textColor="@android:color/holo_purple"
        custom:fontTypeFaceAsset="Tangerine_Regular.ttf"
        android:text="@string/tang_font" />

</LinearLayout>
